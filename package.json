{
  "name": "pogo-receipts-service",
  "version": "1.0.0",
  "description": "Ingestion and enrichment pipeline for Pogo receipt data, built with TypeScript, Postgres, and OpenAI-powered normalization.",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "start": "docker-compose up --build",
    "dev": "docker-compose up -d postgres && tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern='\\.unit\\.(test|spec)\\.(ts|js)$'",
    "test:integration:docker": "tsx src/scripts/run-integration-tests.ts",
    "test:api": "jest --testPathPattern='api\\.(test|spec)\\.(ts|js)$'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "sendReceipts": "tsx src/scripts/sendReceipts.ts",
    "healthcheck": "tsx src/scripts/healthcheck.ts",
    "zip": "tsx src/scripts/zip.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^0.0.66",
    "@types/yargs": "17.0.24",
    "ai": "^3.4.32",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.18.2",
    "pg": "^8.12.0",
    "yargs": "17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@testcontainers/postgresql": "^11.5.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.24.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "author": "Pogo Engineering",
  "license": "UNLICENSED"
}
